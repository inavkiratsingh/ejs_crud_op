<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% if (users.length > 0) { %>
                <% users.forEach(function (user) { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 bg-zinc-700 rounded-lg">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tighter mt-3"><%= user.username %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 mt-10">
                            <a href="/edit/<%= user.id %>" class="text-zinc-200">edit user</a>
                            <a href="/delete/<%= user.id %>" class="text-red-500">delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% }else { %>
                <h3 class="text-zinc-500">No users yet</h3>
            <% } %>

            
        </div>
    </div>
</body>

</html>